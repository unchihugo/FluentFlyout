<Window x:Class="FluentFlyout.Windows.TaskbarWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:FluentFlyout.Windows"
        xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml"
        mc:Ignorable="d"
        Title="TaskbarWindow" Height="40" Width="100"
        WindowStyle="None"
        ResizeMode="NoResize"
        ShowInTaskbar="False"
        AllowsTransparency="True"
        Background="Transparent"
        TextOptions.TextRenderingMode="ClearType" TextOptions.TextFormattingMode="Ideal"
        FontFamily="Segoe UI Variable, Microsoft YaHei, Microsoft JhengHei, MS Gothic"
        Loaded="Window_Loaded" Visibility="Collapsed"
        xmlns:viewModels="clr-namespace:FluentFlyoutWPF.ViewModels"
		d:DataContext="{d:DesignInstance viewModels:UserSettings}">
	<Border Name="MainBorder" CornerRadius="6" MouseEnter="Grid_MouseEnter" MouseLeave="Grid_MouseLeave" MouseLeftButtonUp="Grid_MouseLeftButtonUp">
		<Border.OpacityMask>
			<VisualBrush>
				<VisualBrush.Visual>
					<!-- This Border defines the "Visible Area" (Black = Visible) -->
					<Border Background="Black"
							SnapsToDevicePixels="True"
							CornerRadius="{Binding CornerRadius, ElementName=MainBorder}"
							Width="{Binding ActualWidth, ElementName=MainBorder}"
							Height="{Binding ActualHeight, ElementName=MainBorder}"/>
				</VisualBrush.Visual>
			</VisualBrush>
		</Border.OpacityMask>
		<Grid>
			<Image x:Name="BackgroundImage" Stretch="UniformToFill" HorizontalAlignment="Center" VerticalAlignment="Center" RenderTransformOrigin="0.5,0.5" Opacity="0.4">
				<Image.Effect>
					<BlurEffect Radius="80" />
				</Image.Effect>
			</Image>

            <!-- unused next image for crossfade effect
            <Image x:Name="BackgroundImageNext" Stretch="UniformToFill" HorizontalAlignment="Center" VerticalAlignment="Center" RenderTransformOrigin="0.5,0.5" Opacity="0">
				<Image.Effect>
					<BlurEffect Radius="80" />
				</Image.Effect>
			</Image> -->
			
			<Border Name="TopBorder" BorderThickness="0,1.25,0,0" CornerRadius="5" Margin="0,0,0,1.25">
				<Grid Name="MainGrid" HorizontalAlignment="Left" VerticalAlignment="Center" RenderTransformOrigin="0,0.5">
					<Grid.RenderTransform>
						<ScaleTransform ScaleX="0.9" ScaleY="0.9" />
					</Grid.RenderTransform>
					<StackPanel Name="MainStackPanel" Orientation="Horizontal" HorizontalAlignment="Left" VerticalAlignment="Center" Width="Auto" Margin="4,0,-100,0">
                        <Border Name="SongImageBorder" CornerRadius="5" Margin="0,0,0,-3" ClipToBounds="True" Width="36" Height="36" Panel.ZIndex="2">
							<ui:SymbolIcon Name="SongImagePlaceholder" Symbol="MusicNote220" FontSize="24" Filled="True" Foreground="{ui:ThemeResource AccentTextFillColorPrimaryBrush}" />
							<Border.Background>
								<ImageBrush x:Name="SongImage" Stretch="UniformToFill" />
							</Border.Background>
						</Border>
                        <StackPanel Name="SongInfoStackPanel" Orientation="Vertical" VerticalAlignment="Center" Width="Auto" Margin="8,0,0,0">
                            <TextBlock Name="SongTitle" Text="" FontWeight="Normal" TextTrimming="CharacterEllipsis" Foreground="{ui:ThemeResource TextFillColorPrimaryBrush}" />
                            <TextBlock Name="SongArtist" Text="" FontWeight="Normal" Opacity="0.5" Margin="0,-1.5,0,0" TextTrimming="CharacterEllipsis" Foreground="{ui:ThemeResource TextFillColorPrimaryBrush}" />
						</StackPanel>
                        <StackPanel Name="ControlsStackPanel" Orientation="Horizontal" VerticalAlignment="Center" Width="Auto" Margin="8,0,0,0">
                            <StackPanel.Style>
                                <Style TargetType="StackPanel">
                                    <Setter Property="Visibility" Value="Collapsed" />
                                    <Style.Triggers>
                                        <DataTrigger Binding="{Binding TaskbarWidgetControlsEnabled}" Value="True">
                                            <Setter Property="Visibility" Value="Visible" />
                                        </DataTrigger>
                                    </Style.Triggers>
                                </Style>
                            </StackPanel.Style>
                            <ui:Button Name="PreviousButton" Appearance="Transparent" Icon="{ui:SymbolIcon Previous20, Filled=True}" Height="32" Width="32" Padding="0" BorderThickness="0" Margin="0,0,0,-1" Click="Previous_Click"/>
                            <ui:Button Name="PlayPauseButton" Appearance="Transparent" Icon="{ui:SymbolIcon Pause16, Filled=True}" Height="32" Width="32" Padding="0" BorderThickness="0" Margin="0,0,0,-1" Click="PlayPause_Click"/>
                            <ui:Button Name="NextButton" Appearance="Transparent" Icon="{ui:SymbolIcon Next20, Filled=True}" Height="32" Width="32" Padding="0" BorderThickness="0" Margin="0,0,0,-1" Click="Next_Click"/>
                        </StackPanel>
					</StackPanel>
				</Grid>
			</Border>
		</Grid>
	</Border>
</Window>